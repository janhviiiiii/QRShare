<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMoreSocialActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".activity.MoreSocialActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/layout_padding">

            <!--Linkedin-->
            <ImageView
                android:id="@+id/ivLinkedin"
                android:layout_width="@dimen/image_icon_width"
                android:layout_height="@dimen/image_icon_height"
                android:layout_gravity="center"
                android:contentDescription="Linkedin"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_linkedin"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLinkedinProfileLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter LinkedIn Profile Link"
                    android:inputType="text"
                    android:textColor="?attr/colorOnBackground"
                    android:visibility="gone"
                    tools:ignore="HardcodedText">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <!--Whatsapp-->
            <ImageView
                android:id="@+id/ivWhatsapp"
                android:layout_width="@dimen/image_icon_width"
                android:layout_height="@dimen/image_icon_height"
                android:layout_gravity="center"
                android:contentDescription="Whatsapp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_whatsapp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/llWhatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding"
                android:visibility="gone"
                android:weightSum="2">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryCodePicker"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:color="@color/white"
                    app:ccp_arrowColor="@color/white"
                    app:ccp_contentColor="@color/white" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etWhatsappNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Contact"
                        android:inputType="phone"
                        android:textColor="?attr/colorOnBackground"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!--Spotify-->
            <ImageView
                android:id="@+id/ivSpotify"
                android:layout_width="@dimen/image_icon_width"
                android:layout_height="@dimen/image_icon_height"
                android:layout_gravity="center"
                android:contentDescription="Spotify"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_spotify"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSpotifyArtistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Artist Name"
                    android:inputType="text"
                    android:textColor="?attr/colorOnBackground"
                    android:visibility="gone"
                    tools:ignore="HardcodedText">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSpotifySongName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Song Name"
                    android:inputType="text"
                    android:textColor="?attr/colorOnBackground"
                    android:visibility="gone"
                    tools:ignore="HardcodedText">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <!--Pinterest-->
            <ImageView
                android:id="@+id/ivPinterest"
                android:layout_width="@dimen/image_icon_width"
                android:layout_height="@dimen/image_icon_height"
                android:layout_gravity="center"
                android:contentDescription="Pinterest"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_pinterest"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPinterestUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Pinterest Username"
                    android:inputType="text"
                    android:textColor="?attr/colorOnBackground"
                    android:visibility="gone"
                    tools:ignore="HardcodedText">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <!--Snapchat-->
            <ImageView
                android:id="@+id/ivSnapchat"
                android:layout_width="@dimen/image_icon_width"
                android:layout_height="@dimen/image_icon_height"
                android:layout_gravity="center"
                android:contentDescription="Snapchat"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_snapchat"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSnapchatUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Snapchat Username"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnBackground"
                    android:visibility="gone"
                    tools:ignore="HardcodedText">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/ivX"
                android:layout_width="@dimen/image_icon_width"
                android:layout_height="@dimen/image_icon_height"
                android:layout_gravity="center"
                android:background="@color/white"
                android:contentDescription="Linkedin"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_x"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etXUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter X Username"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnBackground"
                    android:visibility="gone"
                    tools:ignore="HardcodedText">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding"
                android:backgroundTint="?attr/colorPrimary"
                android:text="GENERATE QR CODE"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeMedium" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>